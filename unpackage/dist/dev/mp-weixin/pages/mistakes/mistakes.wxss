
page{
	background-color: #f0f0f0;
}
.concent{
	position: relative;
	width: 100%;
	height: 100%;
	padding: 0 28rpx 30rpx;
	background-color: #f0f0f0;
}
.tab-bar{
	position: fixed;
	z-index: 10;
	left: 0;
	top: 88rpx;
	width: 100%;
	height: 100rpx;
	padding: 0 28rpx;
	line-height: 70rpx;
	background: #f0f0f0;
}
.tab-list{
	position: relative;
	float: left;
	margin-right:50rpx;
	font-size: 30rpx;
	text-align: center;
	background: #f0f0f0;
	overflow: hidden;
}
.tab-list::after{
	content: '';
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	border-bottom: 4rpx solid transition;
	transition: all .6s ;
	-webkit-transition: all .6s;
}
.tab-bar .active{
	color: #17A1E8;
}
.active::after{	
	border-bottom: 4rpx solid #17A1E8;
}
.tab-concent{
	width: 100%;
	padding-top: 90rpx;
	height: 100%;
	overflow: hidden;
}
.mis-all{
	width: 100%;
	height: 100%;
	overflow: auto;
}
.mistakes{
	width: 100%;
	padding:24rpx;
	margin-bottom: 22rpx;
	background-color: #fff;
	border-radius: 14rpx;
	overflow: hidden;
}
.problem-t{
	width: 100%;
	padding-bottom: 20rpx;
	color: #666;
	font-size: 28rpx;
	overflow: hidden;
}
.problem-title{
